{
  "name": "permit-system-api",
  "version": "1.0.0",
  "description": "A simulated permit management system API with intentional issues",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "docker:build": "docker build -t permit-system-api .",
    "docker:run": "docker run -p 3000:3000 permit-system-api",
    "docker:start": "npm run docker:build && npm run docker:run",
    "generate-types": "openapi-typescript permit-system-api.yaml -o src/types/api-types.ts",
    "test:smoke": "ts-node src/smoke-tests.ts",
    "test": "vitest",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "format:check": "biome check --apply-unsafe ."
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "openapi-typescript": "^6.2.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4",
    "vitest": "^1.3.1"
  }
}
